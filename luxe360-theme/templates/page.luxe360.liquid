<script>
  // ========== ANIMATION SYSTEM ==========

  // Letter-by-letter animation for hero title
  function animateHeroTitle() {
    const heroTitle = document.querySelector('.hero h1');
    if (!heroTitle) return;

    // Store original text and data attributes
    const originalTextNL = heroTitle.getAttribute('data-nl') || heroTitle.textContent;
    const originalTextEN = heroTitle.getAttribute('data-en') || '';

    function splitTextIntoLetters(text) {
      // Split by <br> tag first
      const lines = text.split('<br>');
      let charCounter = 0;

      return lines.map((line, lineIndex) => {
        const letters = line.split('').map((char) => {
          const delay = charCounter * 0.05;
          charCounter++;

          if (char === ' ') {
            return `<span class="letter" style="animation-delay: ${delay}s;">&nbsp;</span>`;
          }
          return `<span class="letter" style="animation-delay: ${delay}s;">${char}</span>`;
        }).join('');

        // Add <br> between lines except after the last line
        return lineIndex < lines.length - 1 ? letters + '<br>' : letters;
      }).join('');
    }

    function updateTitleAnimation() {
      const currentLang = LanguageSystem && LanguageSystem.currentLang ? LanguageSystem.currentLang : 'nl';
      const text = currentLang === 'nl' ? originalTextNL : originalTextEN;

      // Clear and animate
      heroTitle.style.opacity = '0';
      setTimeout(() => {
        heroTitle.innerHTML = splitTextIntoLetters(text);
        heroTitle.style.opacity = '1';
      }, 100);
    }

    // Initial animation
    updateTitleAnimation();

    // Re-animate on language change
    if (window.LanguageSystem) {
      const originalUpdateText = LanguageSystem.updateText;
      LanguageSystem.updateText = function() {
        originalUpdateText.call(this);
        setTimeout(updateTitleAnimation, 100);
      };
    }
  }

  // Scroll Reveal Animation System
  function initScrollReveal() {
    const reveals = document.querySelectorAll('.scroll-reveal');

    const revealObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('revealed');
          // Don't unobserve so animation can repeat if needed
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -100px 0px'
    });

    reveals.forEach(reveal => {
      revealObserver.observe(reveal);
    });
  }

  // Initialize animations when DOM is loaded
  document.addEventListener('DOMContentLoaded', function() {
    // Wait a bit for fonts and layout to be ready
    setTimeout(() => {
      animateHeroTitle();
      initScrollReveal();
    }, 300);
  });

  // Package Selection
  const packageCards = document.querySelectorAll('.package-card');
  const packageSelect = document.getElementById('contact-package');

  packageCards.forEach(card => {
    card.addEventListener('click', function() {
      packageCards.forEach(c => c.classList.remove('selected'));
      this.classList.add('selected');

      if (packageSelect) {
        const packageType = this.getAttribute('data-package');
        if (packageType) {
          packageSelect.value = packageType;
        }
      }
    });
  });

  // Smooth scrolling
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));

      if (target) {
        const headerOffset = 130;
        const elementPosition = target.getBoundingClientRect().top;
        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

        window.scrollTo({
          top: offsetPosition,
          behavior: 'smooth'
        });
      }
    });
  });

  // Parallax effect for hero
  const hero = document.querySelector('.hero');
  if (hero) {
    window.addEventListener('scroll', function() {
      const scrolled = window.pageYOffset;
      const heroContent = hero.querySelector('.hero-content');

      if (heroContent && scrolled < window.innerHeight) {
        const rate = scrolled * 0.3;
        heroContent.style.transform = `translateY(${rate}px)`;
        heroContent.style.opacity = 1 - (scrolled / (window.innerHeight * 0.8));
      }
    });
  }

  // Language Switching System
  const LanguageSystem = {
    currentLang: 'nl',

    init: function() {
      this.loadLanguage();
      this.setupEventListeners();
      this.applyLanguage();
    },

    loadLanguage: function() {
      const saved = localStorage.getItem('luxe360_language');
      if (saved) {
        this.currentLang = saved;
      }
    },

    saveLanguage: function() {
      localStorage.setItem('luxe360_language', this.currentLang);
    },

    setupEventListeners: function() {
      const langBtns = document.querySelectorAll('.lang-btn');
      langBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          this.currentLang = btn.dataset.lang;
          this.saveLanguage();
          this.applyLanguage();
          this.updateButtons();
        });
      });
    },

    updateButtons: function() {
      const langBtns = document.querySelectorAll('.lang-btn');
      langBtns.forEach(btn => {
        btn.classList.remove('active');
        if (btn.dataset.lang === this.currentLang) {
          btn.classList.add('active');
        }
      });
    },

    applyLanguage: function() {
      const elements = document.querySelectorAll('[data-en][data-nl]');
      elements.forEach(el => {
        const text = el.dataset[this.currentLang];
        if (text) {
          el.innerHTML = text;
        }
      });

      // Update placeholders
      const inputsWithPlaceholder = document.querySelectorAll('[data-placeholder-en][data-placeholder-nl]');
      inputsWithPlaceholder.forEach(el => {
        const placeholder = el.dataset[`placeholder${this.currentLang === 'en' ? 'En' : 'Nl'}`];
        if (placeholder) {
          el.placeholder = placeholder;
        }
      });

      this.updateButtons();

      // Re-render calendar with new language (with try-catch for safety)
      try {
        if (typeof AvailabilitySystem !== 'undefined' && AvailabilitySystem.renderCalendar) {
          AvailabilitySystem.renderCalendar();
        }
      } catch (e) {
        console.log('Calendar not yet initialized, skipping re-render');
      }
    }
  };

  // DON'T initialize language system here - wait until after AvailabilitySystem is defined
  // LanguageSystem.init(); // MOVED TO AFTER AvailabilitySystem

  // Experience Cards Animation - Fixed with fallback
  const experienceCards = document.querySelectorAll('.experience-card');

  // IMMEDIATE FIX: Make cards visible immediately with !important
  experienceCards.forEach((card, index) => {
    card.style.setProperty('opacity', '1', 'important');
    card.style.setProperty('transform', 'translateY(0)', 'important');
  });

  const experienceObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('animate-in');
        }, index * 150);
        experienceObserver.unobserve(entry.target);
      }
    });
  }, { threshold: 0.2 });

  experienceCards.forEach(card => {
    experienceObserver.observe(card);
  });

  // Scroll animations with stagger for other elements
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -100px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('.gallery-item, .package-card').forEach((el, index) => {
    el.style.opacity = '0';
    el.style.transform = 'translateY(30px)';
    el.style.transition = `all 0.8s cubic-bezier(0.4, 0, 0.2, 1) ${index * 0.15}s`;
    observer.observe(el);
  });

  // Section headers reveal
  document.querySelectorAll('.section-header').forEach(header => {
    header.style.opacity = '0';
    header.style.transform = 'translateY(40px)';
    header.style.transition = 'all 1s cubic-bezier(0.4, 0, 0.2, 1)';

    const headerObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
          headerObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.3 });

    headerObserver.observe(header);
  });

  // Text reveal animation for hero title
  const heroTitle = document.querySelector('.hero h1');
  if (heroTitle) {
    const text = heroTitle.innerHTML;
    heroTitle.innerHTML = '';
    const lines = text.split('<br>');

    lines.forEach((line, lineIndex) => {
      const lineSpan = document.createElement('span');
      lineSpan.style.display = 'block';
      lineSpan.style.overflow = 'hidden';

      const chars = line.trim().split('');
      chars.forEach((char, charIndex) => {
        const span = document.createElement('span');
        span.textContent = char === ' ' ? '\u00A0' : char;
        span.style.display = 'inline-block';
        span.style.opacity = '0';
        span.style.transform = 'translateY(100%)';
        span.style.transition = `all 0.5s cubic-bezier(0.4, 0, 0.2, 1) ${(lineIndex * 0.3) + (charIndex * 0.03)}s`;
        lineSpan.appendChild(span);
      });

      heroTitle.appendChild(lineSpan);
      if (lineIndex < lines.length - 1) {
        heroTitle.appendChild(document.createElement('br'));
      }
    });

    setTimeout(() => {
      const spans = heroTitle.querySelectorAll('span span');
      spans.forEach(span => {
        span.style.opacity = '1';
        span.style.transform = 'translateY(0)';
      });
    }, 300);
  }

  // ===================================
  // AVAILABILITY BOOKING SYSTEM
  // ===================================

  const AvailabilitySystem = {
    currentDate: new Date(),
    currentMonth: new Date().getMonth(),
    currentYear: new Date().getFullYear(),
    selectedDate: null,
    bookings: {},
    maxBookingsPerDay: 2,

    init: function() {
      console.log('üìÖ AvailabilitySystem: Starting init...');

      // CRITICAL: Check if elements exist FIRST
      const calendar = document.getElementById('availability-calendar');
      const monthDisplay = document.getElementById('current-month');

      if (!calendar) {
        console.error('‚ùå FATAL: Calendar element #availability-calendar not found!');
        return false;
      }
      if (!monthDisplay) {
        console.error('‚ùå FATAL: Month display element #current-month not found!');
        return false;
      }

      console.log('‚úÖ Calendar elements verified present');

      this.loadBookings();
      console.log('üìÖ AvailabilitySystem: Bookings loaded');
      this.renderCalendar();
      console.log('üìÖ AvailabilitySystem: Calendar rendered');
      this.setupEventListeners();
      console.log('üìÖ AvailabilitySystem: Event listeners setup');
      this.updateStats();
      console.log('üìÖ AvailabilitySystem: Stats updated - Init complete!');
      return true;
    },

    loadBookings: function() {
      const stored = localStorage.getItem('luxe360_bookings');
      this.bookings = stored ? JSON.parse(stored) : {};

      // Add some sample bookings for demonstration
      if (Object.keys(this.bookings).length === 0) {
        this.addSampleBookings();
      }
    },

    addSampleBookings: function() {
      const today = new Date();
      const year = today.getFullYear();
      const month = today.getMonth();

      // Add sample bookings for current month
      const sampleDates = [
        new Date(year, month, 15),
        new Date(year, month, 15), // Same day - makes it busy
        new Date(year, month, 20),
        new Date(year, month, 22),
        new Date(year, month, 25),
        new Date(year, month, 25), // Same day - makes it busy
        new Date(year, month + 1, 5),
        new Date(year, month + 1, 10),
      ];

      sampleDates.forEach(date => {
        const key = this.formatDateKey(date);
        if (!this.bookings[key]) {
          this.bookings[key] = [];
        }
        this.bookings[key].push({
          name: 'Sample Event',
          package: 'prestige',
          timestamp: Date.now()
        });
      });

      this.saveBookings();
    },

    saveBookings: function() {
      localStorage.setItem('luxe360_bookings', JSON.stringify(this.bookings));
    },

    formatDateKey: function(date) {
      return `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}-${String(date.getDate()).padStart(2, '0')}`;
    },

    // Generate available slots for the current month (approximately 15 slots)
    generateAvailableSlots: function() {
      const slots = [];
      const today = new Date();
      today.setHours(0, 0, 0, 0);

      // Get all dates in current month
      const daysInMonth = new Date(this.currentYear, this.currentMonth + 1, 0).getDate();

      // Collect potential available dates (Wednesday, Thursday, Sunday)
      const availableDays = [0, 3, 4]; // Sunday, Wednesday, Thursday

      for (let day = 1; day <= daysInMonth; day++) {
        const date = new Date(this.currentYear, this.currentMonth, day);
        const dayOfWeek = date.getDay();

        // Only include future dates and available days of the week
        if (date >= today && availableDays.includes(dayOfWeek)) {
          slots.push(date);
        }
      }

      // Limit to approximately 15 slots (take first 15 available dates)
      return slots.slice(0, 15);
    },

    getAvailabilityStatus: function(date) {
      const key = this.formatDateKey(date);
      const bookingCount = this.bookings[key] ? this.bookings[key].length : 0;

      if (bookingCount >= this.maxBookingsPerDay) {
        return 'busy';
      } else if (bookingCount > 0) {
        return 'limited';
      }
      return 'available';
    },

    renderCalendar: function() {
      console.log('üìÖ renderCalendar: Starting (Slots Mode)...');
      const calendar = document.getElementById('availability-calendar');
      const monthDisplay = document.getElementById('current-month');

      if (!calendar || !monthDisplay) {
        console.error('‚ùå Calendar elements not found!');
        return false;
      }

      // Clear calendar
      calendar.innerHTML = '';

      // Get current language
      const currentLang = LanguageSystem && LanguageSystem.currentLang ? LanguageSystem.currentLang : 'nl';

      // Update month display
      const monthNamesNL = ['Januari', 'Februari', 'Maart', 'April', 'Mei', 'Juni',
                            'Juli', 'Augustus', 'September', 'Oktober', 'November', 'December'];
      const monthNamesEN = ['January', 'February', 'March', 'April', 'May', 'June',
                            'July', 'August', 'September', 'October', 'November', 'December'];
      const monthNames = currentLang === 'nl' ? monthNamesNL : monthNamesEN;
      monthDisplay.textContent = `${monthNames[this.currentMonth]} ${this.currentYear}`;

      // Day names for display
      const dayNamesNL = ['Zondag', 'Maandag', 'Dinsdag', 'Woensdag', 'Donderdag', 'Vrijdag', 'Zaterdag'];
      const dayNamesEN = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
      const dayNames = currentLang === 'nl' ? dayNamesNL : dayNamesEN;

      // Status labels
      const statusLabels = {
        available: currentLang === 'nl' ? 'Beschikbaar' : 'Available',
        limited: currentLang === 'nl' ? 'Beperkt' : 'Limited',
        busy: currentLang === 'nl' ? 'Volgeboekt' : 'Fully Booked'
      };

      // Generate available slots
      const slots = this.generateAvailableSlots();

      console.log(`üìÖ Generated ${slots.length} slots for ${monthNames[this.currentMonth]} ${this.currentYear}`);

      // If no slots available, show message
      if (slots.length === 0) {
        const noSlotsMsg = document.createElement('div');
        noSlotsMsg.style.cssText = 'grid-column: 1 / -1; text-align: center; padding: 40px; color: #666; font-size: 1.1rem;';
        noSlotsMsg.textContent = currentLang === 'nl'
          ? 'Geen beschikbare slots in deze maand. Probeer een andere maand.'
          : 'No available slots in this month. Try another month.';
        calendar.appendChild(noSlotsMsg);
        this.updateStats();
        return true;
      }

      // Create slot elements
      slots.forEach((date, index) => {
        const slotEl = document.createElement('div');
        slotEl.className = 'availability-slot';
        slotEl.dataset.date = this.formatDateKey(date);

        // Get status
        const status = this.getAvailabilityStatus(date);
        slotEl.classList.add(status);

        // Format date display
        const day = date.getDate();
        const month = monthNames[date.getMonth()];
        const dayName = dayNames[date.getDay()];

        // Build slot content
        slotEl.innerHTML = `
          <span class="slot-date">${day} ${month}</span>
          <span class="slot-day">${dayName}</span>
          <span class="slot-status">${statusLabels[status]}</span>
        `;

        // Check if selected
        if (this.selectedDate && this.formatDateKey(date) === this.formatDateKey(this.selectedDate)) {
          slotEl.classList.add('selected');
        }

        // Click handler (only if not busy)
        if (status !== 'busy') {
          slotEl.addEventListener('click', () => this.selectDate(date, slotEl));
        }

        calendar.appendChild(slotEl);
        console.log(`üìÖ Added slot ${index + 1}: ${day} ${month} (${dayName}) - ${status}`);
      });

      console.log('üìÖ Calendar rendering complete! Total slots:', slots.length);
      this.updateStats();
      return true;
    },

    selectDate: function(date, element) {
      if (element.classList.contains('busy')) return;

      // Remove previous selection
      document.querySelectorAll('.availability-slot.selected').forEach(el => {
        el.classList.remove('selected');
      });

      // Add selection
      element.classList.add('selected');
      this.selectedDate = date;

      // Update date input
      const dateInput = document.getElementById('contact-date');
      if (dateInput) {
        const formattedDate = this.formatDateKey(date);
        dateInput.value = formattedDate;
      }

      // Show availability message
      const status = this.getAvailabilityStatus(date);
      const currentLang = LanguageSystem && LanguageSystem.currentLang ? LanguageSystem.currentLang : 'nl';
      let message = '';

      if (status === 'busy') {
        message = currentLang === 'nl'
          ? 'Deze datum is volgeboekt. Selecteer een andere datum.'
          : 'This date is fully booked. Please select another date.';
      } else if (status === 'limited') {
        message = currentLang === 'nl'
          ? 'Beperkte beschikbaarheid op deze datum. Boek nu!'
          : 'Limited slots available on this date. Book now!';
      } else {
        message = currentLang === 'nl'
          ? '‚úì Deze datum is geselecteerd en beschikbaar!'
          : '‚úì This date is selected and available!';
      }

      // Create or update message
      let msgEl = document.querySelector('.date-status-message');
      if (!msgEl) {
        msgEl = document.createElement('div');
        msgEl.className = 'date-status-message';
        msgEl.style.cssText = 'text-align: center; padding: 12px; margin-top: 15px; border-radius: 8px; font-weight: 600; font-size: 0.95rem;';
        document.querySelector('.availability-section').appendChild(msgEl);
      }

      msgEl.textContent = message;
      msgEl.style.background = status === 'busy' ? '#ffebee' : status === 'limited' ? '#fff3e0' : '#e8f5e9';
      msgEl.style.color = status === 'busy' ? '#c62828' : status === 'limited' ? '#ef6c00' : '#2e7d32';
      msgEl.style.border = status === 'busy' ? '2px solid #f44336' : status === 'limited' ? '2px solid #ff9800' : '2px solid #4caf50';
    },

    setupEventListeners: function() {
      const prevBtn = document.getElementById('prev-month');
      const nextBtn = document.getElementById('next-month');

      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          this.currentMonth--;
          if (this.currentMonth < 0) {
            this.currentMonth = 11;
            this.currentYear--;
          }
          this.renderCalendar();
        });
      }

      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          this.currentMonth++;
          if (this.currentMonth > 11) {
            this.currentMonth = 0;
            this.currentYear++;
          }
          this.renderCalendar();
        });
      }

      // Listen for form submission to add booking
      const form = document.querySelector('form');
      if (form) {
        form.addEventListener('submit', (e) => {
          const dateInput = document.getElementById('contact-date');
          const nameInput = document.getElementById('contact-name');
          const packageInput = document.getElementById('contact-package');

          if (dateInput && dateInput.value && nameInput && packageInput) {
            this.addBooking(dateInput.value, nameInput.value, packageInput.value);
          }
        });
      }
    },

    addBooking: function(dateKey, name, packageType) {
      if (!this.bookings[dateKey]) {
        this.bookings[dateKey] = [];
      }

      this.bookings[dateKey].push({
        name: name,
        package: packageType,
        timestamp: Date.now()
      });

      this.saveBookings();
      this.renderCalendar();
    },

    updateStats: function() {
      const totalBookingsEl = document.getElementById('total-bookings');
      const availableSlotsEl = document.getElementById('available-slots');

      if (!totalBookingsEl || !availableSlotsEl) return;

      // Get available slots for current month
      const slots = this.generateAvailableSlots();

      // Count bookings for these slots
      let totalBooked = 0;
      let availableCount = 0;

      slots.forEach(date => {
        const key = this.formatDateKey(date);
        const booked = this.bookings[key] ? this.bookings[key].length : 0;
        totalBooked += booked;

        // Count available capacity remaining
        if (booked < this.maxBookingsPerDay) {
          availableCount++;
        }
      });

      totalBookingsEl.textContent = totalBooked;
      availableSlotsEl.textContent = availableCount;
    }
  };

  // NOW initialize language system (after AvailabilitySystem is defined)
  console.log('üåê Initializing LanguageSystem...');
  LanguageSystem.init();
  console.log('üåê LanguageSystem initialized');

  // Initialize availability system when DOM is ready
  console.log('üìÖ Document ready state:', document.readyState);

  function initializeCalendar() {
    console.log('üìÖ initializeCalendar() called');

    // Check if elements exist
    const calendar = document.getElementById('availability-calendar');
    const monthDisplay = document.getElementById('current-month');

    if (!calendar) {
      console.error('‚ùå Calendar element not found, retrying in 500ms...');
      setTimeout(initializeCalendar, 500);
      return;
    }

    if (!monthDisplay) {
      console.error('‚ùå Month display element not found, retrying in 500ms...');
      setTimeout(initializeCalendar, 500);
      return;
    }

    console.log('‚úÖ All calendar elements found, initializing AvailabilitySystem...');
    const success = AvailabilitySystem.init();

    if (success) {
      console.log('‚úÖ AvailabilitySystem initialized successfully!');

      // Visual verification
      setTimeout(() => {
        const cal = document.getElementById('availability-calendar');
        if (cal && cal.children.length > 0) {
          console.log('‚úÖ‚úÖ‚úÖ CALENDAR IS VISIBLE WITH', cal.children.length, 'ELEMENTS ‚úÖ‚úÖ‚úÖ');
        } else {
          console.error('‚ùå Calendar rendered but has no children!');
        }
      }, 100);
    } else {
      console.error('‚ùå AvailabilitySystem initialization failed!');
    }
  }

  if (document.readyState === 'loading') {
    console.log('üìÖ Waiting for DOMContentLoaded...');
    document.addEventListener('DOMContentLoaded', initializeCalendar);
  } else {
    console.log('üìÖ DOM already loaded, initializing now...');
    initializeCalendar();
  }

  // FAILSAFE: Try again after 1 second if calendar is still empty
  setTimeout(() => {
    const cal = document.getElementById('availability-calendar');
    if (cal && cal.children.length === 0) {
      console.warn('‚ö†Ô∏è FAILSAFE: Calendar is empty after 1 second, attempting re-initialization...');
      initializeCalendar();
    }
  }, 1000);
</script>

