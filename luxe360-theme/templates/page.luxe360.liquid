{% comment %}
  wen360 events - Complete Landing Page Template
  This is a standalone template that works with all Shopify themes
{% endcomment %}

<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page.title }} - {{ shop.name }}</title>

  {{ content_for_header }}

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --gold: #D4AF37;
      --dark-gold: #B8941F;
      --champagne: #F7E7CE;
      --black: #0A0A0A;
      --charcoal: #2C2C2C;
      --white: #FFFFFF;
      --cream: #FAF8F5;
    }

    body {
      font-family: 'Didot', 'Playfair Display', Georgia, serif;
      line-height: 1.6;
      color: var(--charcoal);
      background: var(--cream);
      overflow-x: hidden;
      scroll-behavior: smooth;
    }

    /* ========== ANIMATION UTILITIES ========== */

    /* Fade In Animations */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInLeft {
      from {
        opacity: 0;
        transform: translateX(-50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes fadeInRight {
      from {
        opacity: 0;
        transform: translateX(50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(50px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes scaleIn {
      from {
        opacity: 0;
        transform: scale(0.8);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }

    @keyframes slideInBottom {
      from {
        opacity: 0;
        transform: translateY(100px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes rotateIn {
      from {
        opacity: 0;
        transform: rotate(-10deg) scale(0.8);
      }
      to {
        opacity: 1;
        transform: rotate(0) scale(1);
      }
    }

    @keyframes shimmer {
      0% {
        background-position: -1000px 0;
      }
      100% {
        background-position: 1000px 0;
      }
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-20px);
      }
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
    }

    @keyframes gradientShift {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    /* Scroll Reveal Classes */
    .scroll-reveal {
      opacity: 0;
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .scroll-reveal.revealed {
      opacity: 1;
    }

    .scroll-reveal.fade-in {
      animation: fadeIn 0.8s ease-out forwards;
    }

    .scroll-reveal.fade-in-left {
      animation: fadeInLeft 0.8s ease-out forwards;
    }

    .scroll-reveal.fade-in-right {
      animation: fadeInRight 0.8s ease-out forwards;
    }

    .scroll-reveal.fade-in-up {
      animation: fadeInUp 0.8s ease-out forwards;
    }

    .scroll-reveal.scale-in {
      animation: scaleIn 0.8s ease-out forwards;
    }

    .scroll-reveal.slide-in-bottom {
      animation: slideInBottom 0.8s ease-out forwards;
    }

    .scroll-reveal.rotate-in {
      animation: rotateIn 0.8s ease-out forwards;
    }

    /* Stagger animation delays */
    .scroll-reveal:nth-child(1) { animation-delay: 0s; }
    .scroll-reveal:nth-child(2) { animation-delay: 0.1s; }
    .scroll-reveal:nth-child(3) { animation-delay: 0.2s; }
    .scroll-reveal:nth-child(4) { animation-delay: 0.3s; }
    .scroll-reveal:nth-child(5) { animation-delay: 0.4s; }
    .scroll-reveal:nth-child(6) { animation-delay: 0.5s; }
    .scroll-reveal:nth-child(7) { animation-delay: 0.6s; }
    .scroll-reveal:nth-child(8) { animation-delay: 0.7s; }

    /* Letter by letter animation for hero title */
    .hero h1 {
      overflow: visible;
    }

    .hero h1 .letter {
      display: inline-block;
      opacity: 0;
      transform: translateY(50px) rotateX(-90deg);
      animation: letterAppear 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    @keyframes letterAppear {
      to {
        opacity: 1;
        transform: translateY(0) rotateX(0);
      }
    }

    /* Navigation */
    .luxe360-nav {
      position: fixed;
      top: 0;
      width: 100%;
      background: rgba(250, 248, 245, 0.95);
      backdrop-filter: blur(10px);
      padding: 20px 5%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      z-index: 1000;
      border-bottom: 1px solid rgba(212, 175, 55, 0.2);
    }

    .announcement-bar {
      position: fixed;
      top: 80px;
      width: 100%;
      background: linear-gradient(90deg, var(--gold), var(--dark-gold), var(--gold));
      color: var(--black);
      padding: 12px 0;
      z-index: 999;
      overflow: hidden;
      border-bottom: 1px solid var(--dark-gold);
      box-shadow: 0 2px 10px rgba(212, 175, 55, 0.3);
    }

    .announcement-content {
      display: flex;
      animation: scroll 30s linear infinite;
      width: fit-content;
    }

    .announcement-bar:hover .announcement-content {
      animation-play-state: paused;
    }

    .announcement-text {
      white-space: nowrap;
      padding: 0 50px;
      font-size: 0.95rem;
      font-weight: 600;
      letter-spacing: 1px;
    }

    @keyframes scroll {
      from { transform: translateX(0); }
      to { transform: translateX(-50%); }
    }

    .logo {
      font-size: 1.8rem;
      font-weight: 700;
      letter-spacing: 3px;
      background: linear-gradient(135deg, var(--gold), var(--dark-gold));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .logo-container {
      display: flex;
      align-items: center;
    }

    .logo-image {
      height: 50px;
      width: auto;
      max-width: 200px;
      object-fit: contain;
      transition: transform 0.3s ease;
    }

    .logo-image:hover {
      transform: scale(1.05);
    }

    .logo-text {
      display: none;
    }

    .nav-links {
      display: flex;
      gap: 40px;
      list-style: none;
    }

    .nav-links a {
      text-decoration: none;
      color: var(--charcoal);
      font-size: 0.95rem;
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: all 0.3s ease;
      position: relative;
    }

    .nav-links a::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 0;
      height: 1px;
      background: var(--gold);
      transition: width 0.3s ease;
    }

    .nav-links a:hover::after {
      width: 100%;
    }

    /* Hero Section */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      background: linear-gradient(135deg, var(--black) 0%, var(--charcoal) 100%);
      overflow: hidden;
      padding-top: 130px;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="1" fill="%23D4AF37" opacity="0.3"/></svg>');
      animation: twinkle 3s ease-in-out infinite;
    }

    @keyframes twinkle {
      0%, 100% { opacity: 0.3; }
      50% { opacity: 0.6; }
    }

    .hero-content {
      text-align: center;
      color: var(--white);
      z-index: 2;
      max-width: 1000px;
      padding: 0 20px;
    }

    .hero-subtitle {
      font-size: 1rem;
      letter-spacing: 4px;
      text-transform: uppercase;
      color: var(--gold);
      margin-bottom: 20px;
      font-weight: 300;
    }

    .hero h1 {
      font-size: 5rem;
      font-weight: 300;
      letter-spacing: 8px;
      margin-bottom: 30px;
      line-height: 1.2;
    }

    .hero-tagline {
      font-size: 1.5rem;
      font-weight: 300;
      margin-bottom: 50px;
      color: var(--champagne);
      font-style: italic;
    }

    .hero-cta {
      display: inline-block;
      padding: 18px 50px;
      background: transparent;
      border: 2px solid var(--gold);
      color: var(--gold);
      text-decoration: none;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-size: 0.9rem;
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
    }

    .hero-cta::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: var(--gold);
      transition: left 0.4s ease;
      z-index: -1;
    }

    .hero-cta:hover {
      color: var(--black);
    }

    .hero-cta:hover::before {
      left: 0;
    }

    /* Experience Section */
    .experience {
      padding: 120px 5%;
      background: var(--cream);
    }

    .section-header {
      text-align: center;
      margin-bottom: 80px;
    }

    .section-subtitle {
      font-size: 0.9rem;
      letter-spacing: 3px;
      text-transform: uppercase;
      color: var(--gold);
      margin-bottom: 15px;
    }

    .section-title {
      font-size: 3.5rem;
      font-weight: 300;
      color: var(--black);
      margin-bottom: 20px;
    }

    .section-description {
      font-size: 1.2rem;
      color: var(--charcoal);
      max-width: 700px;
      margin: 0 auto;
      line-height: 1.8;
      font-weight: 300;
    }

    .experience-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 50px;
      max-width: 1400px;
      margin: 0 auto;
    }

    .experience-card {
      text-align: center;
      padding: 50px 30px;
      background: var(--white);
      border: 1px solid rgba(212, 175, 55, 0.2);
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      border-radius: 4px;
    }

    .experience-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, transparent, var(--gold), transparent);
      transform: scaleX(0);
      transition: transform 0.4s ease;
    }

    .experience-card::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(212, 175, 55, 0.1), transparent);
      transform: translate(-50%, -50%);
      transition: width 0.6s ease, height 0.6s ease;
    }

    .experience-card:hover {
      transform: translateY(-15px) scale(1.02);
      box-shadow: 0 25px 70px rgba(212, 175, 55, 0.2);
      border-color: var(--gold);
    }

    .experience-card:hover::before {
      transform: scaleX(1);
    }

    .experience-card:hover::after {
      width: 300px;
      height: 300px;
    }

    .experience-card:hover .experience-icon {
      transform: scale(1.2) rotateY(360deg);
      filter: drop-shadow(0 5px 15px rgba(212, 175, 55, 0.5));
    }

    .experience-icon {
      font-size: 3rem;
      margin-bottom: 30px;
      filter: grayscale(1) brightness(0.8);
      transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-block;
    }

    .experience-card h3 {
      font-size: 1.5rem;
      margin-bottom: 20px;
      color: var(--black);
      font-weight: 400;
      letter-spacing: 1px;
    }

    .experience-card p {
      font-size: 1rem;
      color: var(--charcoal);
      line-height: 1.8;
      font-weight: 300;
    }

    /* Packages Section */
    .packages {
      padding: 120px 5%;
      background: var(--black);
      color: var(--white);
    }

    .packages-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 40px;
      max-width: 1400px;
      margin: 60px auto 0;
      position: relative;
    }

    .package-card {
      background: var(--charcoal);
      padding: 60px 40px;
      border: 1px solid rgba(212, 175, 55, 0.3);
      text-align: center;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      cursor: pointer;
      overflow: hidden;
      border-radius: 4px;
    }

    .package-card::before {
      content: '';
      position: absolute;
      top: -2px;
      left: -2px;
      right: -2px;
      bottom: -2px;
      background: linear-gradient(45deg, var(--gold), var(--dark-gold), var(--gold));
      background-size: 400% 400%;
      opacity: 0;
      z-index: -1;
      transition: opacity 0.5s ease;
      animation: gradientShift 3s ease infinite;
    }

    .package-card:hover {
      transform: translateY(-10px) scale(1.03);
      border: 2px solid var(--gold);
      box-shadow: 0 20px 60px rgba(212, 175, 55, 0.3);
    }

    .package-card:hover::before {
      opacity: 0.2;
    }

    .package-card:hover .package-name {
      transform: scale(1.1);
      text-shadow: 0 0 20px rgba(212, 175, 55, 0.6);
    }

    .package-card:hover .package-price {
      transform: scale(1.05);
    }

    .package-card.selected {
      border: 3px solid var(--gold);
      background: linear-gradient(135deg, var(--charcoal), var(--black));
      box-shadow: 0 15px 50px rgba(212, 175, 55, 0.25);
    }

    .package-card.selected::after {
      content: '‚úì SELECTED';
      position: absolute;
      top: 20px;
      right: 20px;
      background: var(--gold);
      color: var(--black);
      padding: 8px 15px;
      font-size: 0.75rem;
      letter-spacing: 2px;
      font-weight: 700;
      border-radius: 3px;
    }

    .package-card.featured {
      background: linear-gradient(135deg, var(--charcoal), var(--black));
      border: 2px solid var(--gold);
    }

    .package-badge {
      position: absolute;
      top: -15px;
      left: 50%;
      transform: translateX(-50%);
      background: var(--gold);
      color: var(--black);
      padding: 5px 20px;
      font-size: 0.8rem;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-weight: 600;
    }

    .package-name {
      font-size: 1.8rem;
      margin-bottom: 20px;
      color: var(--gold);
      letter-spacing: 2px;
      text-transform: uppercase;
      font-weight: 400;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-block;
    }

    .package-price {
      font-size: 3.5rem;
      margin-bottom: 10px;
      font-weight: 300;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-block;
    }

    .package-duration {
      font-size: 1rem;
      color: var(--champagne);
      margin-bottom: 40px;
      font-weight: 300;
    }

    .package-features {
      list-style: none;
      margin-bottom: 40px;
      text-align: left;
    }

    .package-features li {
      padding: 15px 0;
      border-bottom: 1px solid rgba(212, 175, 55, 0.1);
      color: var(--champagne);
      font-weight: 300;
    }

    .package-features li::before {
      content: '‚óÜ';
      color: var(--gold);
      margin-right: 15px;
    }

    .package-btn {
      display: inline-block;
      padding: 15px 40px;
      background: transparent;
      border: 2px solid var(--gold);
      color: var(--gold);
      text-decoration: none;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-size: 0.85rem;
      transition: all 0.3s ease;
    }

    .package-btn:hover {
      background: var(--gold);
      color: var(--black);
    }

    /* Black Friday Sale Styles */
    .black-friday-sale {
      position: relative;
      border: 3px solid #ff0000 !important;
      background: linear-gradient(135deg, var(--charcoal), #1a0000) !important;
      box-shadow: 0 0 30px rgba(255, 0, 0, 0.3);
      animation: saleGlow 2s ease-in-out infinite;
    }

    @keyframes saleGlow {
      0%, 100% { box-shadow: 0 0 30px rgba(255, 0, 0, 0.3); }
      50% { box-shadow: 0 0 50px rgba(255, 0, 0, 0.5); }
    }

    .sale-badge {
      position: absolute;
      top: -15px;
      left: 50%;
      transform: translateX(-50%);
      background: #ff0000;
      color: var(--white);
      padding: 8px 25px;
      font-size: 0.9rem;
      letter-spacing: 3px;
      text-transform: uppercase;
      font-weight: 700;
      animation: pulse 1.5s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: translateX(-50%) scale(1); }
      50% { transform: translateX(-50%) scale(1.05); }
    }

    .package-price-wrapper {
      margin-bottom: 10px;
    }

    .package-price-old {
      font-size: 1.8rem;
      color: #888;
      text-decoration: line-through;
      margin-bottom: 5px;
      font-weight: 300;
      opacity: 0.7;
    }

    .package-price-sale {
      font-size: 4.5rem !important;
      color: #ff0000 !important;
      font-weight: 700 !important;
      text-shadow: 0 0 20px rgba(255, 0, 0, 0.5);
      animation: priceFlash 3s ease-in-out infinite;
    }

    @keyframes priceFlash {
      0%, 100% { text-shadow: 0 0 20px rgba(255, 0, 0, 0.5); }
      50% { text-shadow: 0 0 40px rgba(255, 0, 0, 0.8); }
    }

    /* Elegant Animations */
    .reveal {
      opacity: 0;
      transform: translateY(40px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .reveal.active {
      opacity: 1;
      transform: translateY(0);
    }

    .hero-content {
      animation: heroEntrance 1.2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    @keyframes heroEntrance {
      0% {
        opacity: 0;
        transform: translateY(60px) scale(0.95);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .experience-card {
      transform-style: preserve-3d;
      perspective: 1000px;
      /* REMOVED: opacity: 0 and transform - cards now visible by default */
    }

    .experience-card.animate-in {
      animation: cardReveal 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    @keyframes cardReveal {
      0% {
        opacity: 0;
        transform: translateY(30px) scale(0.95);
      }
      100% {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .experience-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(212, 175, 55, 0.2);
    }

    .experience-icon {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .experience-card:hover .experience-icon {
      transform: scale(1.15);
      filter: grayscale(0) brightness(1.1);
    }

    /* Availability System Styles */
    .availability-section {
      background: linear-gradient(135deg, var(--cream), #f0ede8);
      padding: 30px;
      border-radius: 8px;
      margin-bottom: 30px;
      border: 2px solid rgba(212, 175, 55, 0.3);
    }

    .availability-title {
      font-size: 1.2rem;
      color: var(--gold);
      margin-bottom: 15px;
      letter-spacing: 2px;
      text-transform: uppercase;
      font-weight: 600;
    }

    .availability-calendar {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 12px;
      margin-bottom: 20px;
    }

    .availability-slot {
      background: var(--white);
      padding: 16px;
      border-radius: 8px;
      border: 2px solid rgba(212, 175, 55, 0.3);
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
      text-align: center;
    }

    .availability-slot:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 16px rgba(212, 175, 55, 0.4);
      border-color: var(--gold);
    }

    .slot-date {
      font-size: 1.1rem;
      font-weight: 700;
      color: var(--charcoal);
      margin-bottom: 6px;
      display: block;
    }

    .slot-day {
      font-size: 0.85rem;
      color: #666;
      margin-bottom: 8px;
      display: block;
    }

    .slot-status {
      font-size: 0.75rem;
      padding: 4px 12px;
      border-radius: 12px;
      display: inline-block;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .availability-slot.available {
      border-color: #4caf50;
      background: linear-gradient(135deg, #e8f5e9, #ffffff);
    }

    .availability-slot.available .slot-status {
      background: #4caf50;
      color: white;
    }

    .availability-slot.limited {
      border-color: #ff9800;
      background: linear-gradient(135deg, #fff3e0, #ffffff);
    }

    .availability-slot.limited .slot-status {
      background: #ff9800;
      color: white;
    }

    .availability-slot.busy {
      border-color: #f44336;
      background: linear-gradient(135deg, #ffebee, #ffffff);
      opacity: 0.6;
      cursor: not-allowed;
    }

    .availability-slot.busy .slot-status {
      background: #f44336;
      color: white;
    }

    .availability-slot.selected {
      border-color: var(--gold);
      background: linear-gradient(135deg, var(--champagne), var(--white));
      box-shadow: 0 8px 20px rgba(212, 175, 55, 0.5);
      transform: translateY(-3px);
    }

    .availability-slot.selected .slot-date {
      color: var(--gold);
    }


    .availability-legend {
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .legend-item {
