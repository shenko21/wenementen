        calendar.appendChild(slotEl);
        console.log(`ðŸ“… Added slot ${index + 1}: ${day} ${month} (${dayName}) - ${status}`);
      });

      console.log('ðŸ“… Calendar rendering complete! Total slots:', slots.length);
      this.updateStats();
      return true;
    },

    selectDate: function(date, element) {
      if (element.classList.contains('busy')) return;

