        message = currentLang === 'nl'
          ? 'Deze datum is volgeboekt. Selecteer een andere datum.'
          : 'This date is fully booked. Please select another date.';
      } else if (status === 'limited') {
        message = currentLang === 'nl'
          ? 'Beperkte beschikbaarheid op deze datum. Boek nu!'
          : 'Limited slots available on this date. Book now!';
      } else {
        message = currentLang === 'nl'
          ? 'âœ“ Deze datum is geselecteerd en beschikbaar!'
          : 'âœ“ This date is selected and available!';
      }

      // Create or update message
      let msgEl = document.querySelector('.date-status-message');
      if (!msgEl) {
        msgEl = document.createElement('div');
        msgEl.className = 'date-status-message';
        msgEl.style.cssText = 'text-align: center; padding: 12px; margin-top: 15px; border-radius: 8px; font-weight: 600; font-size: 0.95rem;';
        document.querySelector('.availability-section').appendChild(msgEl);
      }

      msgEl.textContent = message;
      msgEl.style.background = status === 'busy' ? '#ffebee' : status === 'limited' ? '#fff3e0' : '#e8f5e9';
      msgEl.style.color = status === 'busy' ? '#c62828' : status === 'limited' ? '#ef6c00' : '#2e7d32';
      msgEl.style.border = status === 'busy' ? '2px solid #f44336' : status === 'limited' ? '2px solid #ff9800' : '2px solid #4caf50';
    },

    setupEventListeners: function() {
      const prevBtn = document.getElementById('prev-month');
      const nextBtn = document.getElementById('next-month');

      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          this.currentMonth--;
          if (this.currentMonth < 0) {
            this.currentMonth = 11;
            this.currentYear--;
          }
          this.renderCalendar();
        });
      }

      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          this.currentMonth++;
          if (this.currentMonth > 11) {
            this.currentMonth = 0;
            this.currentYear++;
          }
          this.renderCalendar();
        });
      }

      // Listen for form submission to add booking
      const form = document.querySelector('form');
      if (form) {
        form.addEventListener('submit', (e) => {
          const dateInput = document.getElementById('contact-date');
          const nameInput = document.getElementById('contact-name');
          const packageInput = document.getElementById('contact-package');

          if (dateInput && dateInput.value && nameInput && packageInput) {
            this.addBooking(dateInput.value, nameInput.value, packageInput.value);
          }
        });
      }
    },

    addBooking: function(dateKey, name, packageType) {
      if (!this.bookings[dateKey]) {
        this.bookings[dateKey] = [];
      }

      this.bookings[dateKey].push({
        name: name,
        package: packageType,
        timestamp: Date.now()
      });

      this.saveBookings();
      this.renderCalendar();
    },

    updateStats: function() {
      const totalBookingsEl = document.getElementById('total-bookings');
      const availableSlotsEl = document.getElementById('available-slots');

      if (!totalBookingsEl || !availableSlotsEl) return;

      // Get available slots for current month
      const slots = this.generateAvailableSlots();

      // Count bookings for these slots
      let totalBooked = 0;
      let availableCount = 0;

      slots.forEach(date => {
        const key = this.formatDateKey(date);
        const booked = this.bookings[key] ? this.bookings[key].length : 0;
        totalBooked += booked;

        // Count available capacity remaining
        if (booked < this.maxBookingsPerDay) {
          availableCount++;
        }
      });

      totalBookingsEl.textContent = totalBooked;
      availableSlotsEl.textContent = availableCount;
    }
  };

  // NOW initialize language system (after AvailabilitySystem is defined)
  console.log('ðŸŒ Initializing LanguageSystem...');
  LanguageSystem.init();
  console.log('ðŸŒ LanguageSystem initialized');

  // Initialize availability system when DOM is ready
  console.log('ðŸ“… Document ready state:', document.readyState);

  function initializeCalendar() {
    console.log('ðŸ“… initializeCalendar() called');

    // Check if elements exist
    const calendar = document.getElementById('availability-calendar');
    const monthDisplay = document.getElementById('current-month');

    if (!calendar) {
      console.error('âŒ Calendar element not found, retrying in 500ms...');
      setTimeout(initializeCalendar, 500);
      return;
    }

    if (!monthDisplay) {
      console.error('âŒ Month display element not found, retrying in 500ms...');
      setTimeout(initializeCalendar, 500);
      return;
    }

    console.log('âœ… All calendar elements found, initializing AvailabilitySystem...');
    const success = AvailabilitySystem.init();

    if (success) {
      console.log('âœ… AvailabilitySystem initialized successfully!');

      // Visual verification
      setTimeout(() => {
        const cal = document.getElementById('availability-calendar');
        if (cal && cal.children.length > 0) {
          console.log('âœ…âœ…âœ… CALENDAR IS VISIBLE WITH', cal.children.length, 'ELEMENTS âœ…âœ…âœ…');
        } else {
          console.error('âŒ Calendar rendered but has no children!');
        }
      }, 100);
    } else {
      console.error('âŒ AvailabilitySystem initialization failed!');
    }
  }

  if (document.readyState === 'loading') {
    console.log('ðŸ“… Waiting for DOMContentLoaded...');
    document.addEventListener('DOMContentLoaded', initializeCalendar);
  } else {
    console.log('ðŸ“… DOM already loaded, initializing now...');
    initializeCalendar();
  }

  // FAILSAFE: Try again after 1 second if calendar is still empty
  setTimeout(() => {
    const cal = document.getElementById('availability-calendar');
    if (cal && cal.children.length === 0) {
      console.warn('âš ï¸ FAILSAFE: Calendar is empty after 1 second, attempting re-initialization...');
      initializeCalendar();
    }
  }, 1000);

  // ========== SHOPIFY CHECKOUT INTEGRATION ==========
  const ShopifyCheckout = {
    // Package product handles/IDs - configure these in Shopify admin
    packages: {
      essence: {
        name: 'Basispakket - 3 Uur',
        price: 495,
        handle: 'basispakket'
      },
      prestige: {
        name: 'Premium Pakket - 5 Uur',
        price: 795,
        handle: 'premium-pakket'
      },
      opulence: {
        name: 'Corporate Pakket - Volledige Dag',
        price: 1295,
        handle: 'corporate-pakket'
      }
    },

    init: function() {
      // Package card buttons
      const bookNowButtons = document.querySelectorAll('.book-now-btn');
      bookNowButtons.forEach(btn => {
        btn.addEventListener('click', this.handleBookNow.bind(this));
      });

      // Contact form "Book & Pay" button
      const formBookPayBtn = document.getElementById('book-pay-btn');
      if (formBookPayBtn) {
        formBookPayBtn.addEventListener('click', this.handleFormBookPay.bind(this));
      }

      console.log('âœ… Shopify Checkout integration initialized');
    },

    // Handle form "Book Now & Pay" button
    handleFormBookPay: function(e) {
      e.preventDefault();

      const btn = e.target;
      const packageSelect = document.getElementById('contact-package');
      const nameInput = document.getElementById('contact-name');
      const emailInput = document.getElementById('contact-email');
      const phoneInput = document.getElementById('contact-phone');
      const dateInput = document.getElementById('contact-date');
      const eventTypeInput = document.getElementById('contact-event-type');
      const messageInput = document.getElementById('contact-message');

      // Validate required fields
      if (!packageSelect || !packageSelect.value || packageSelect.value === '' || packageSelect.value === 'custom') {
        alert(LanguageSystem && LanguageSystem.currentLang === 'en'
          ? 'Please select a package (not Custom) to proceed to checkout.'
          : 'Selecteer een pakket (niet Op Maat) om door te gaan naar de kassa.');
        return;
      }

      if (!nameInput || !nameInput.value.trim()) {
        alert(LanguageSystem && LanguageSystem.currentLang === 'en' ? 'Please enter your name.' : 'Vul uw naam in.');
        nameInput && nameInput.focus();
        return;
      }

      if (!emailInput || !emailInput.value.trim()) {
        alert(LanguageSystem && LanguageSystem.currentLang === 'en' ? 'Please enter your email.' : 'Vul uw e-mailadres in.');
        emailInput && emailInput.focus();
        return;
      }

      const packageType = packageSelect.value;
      const pkg = this.packages[packageType];

      if (!pkg) {
        alert(LanguageSystem && LanguageSystem.currentLang === 'en'
          ? 'Please select a valid package.'
          : 'Selecteer een geldig pakket.');
        return;
      }

      // Collect event details for line item properties
      const eventDetails = {
        name: nameInput.value.trim(),
        email: emailInput.value.trim(),
        phone: phoneInput ? phoneInput.value.trim() : '',
        date: dateInput ? dateInput.value : '',
        eventType: eventTypeInput ? eventTypeInput.value : '',
        message: messageInput ? messageInput.value.trim() : ''
      };

      // Add loading state
      btn.classList.add('loading');
      const originalText = btn.textContent;
      btn.textContent = LanguageSystem && LanguageSystem.currentLang === 'en' ? 'Processing...' : 'Verwerken...';

      // Try to add to cart with event details
      this.addToCartWithDetails(packageType, eventDetails, btn, originalText);
    },

    addToCartWithDetails: function(packageType, eventDetails, btn, originalText) {
      const pkg = this.packages[packageType];

      // First try to find product by handle
      fetch(`/products/${pkg.handle}.js`)
        .then(response => {
          if (!response.ok) throw new Error('Product not found');
          return response.json();
        })
        .then(product => {
          if (product.variants && product.variants.length > 0) {
            const variantId = product.variants[0].id;

            // Clear cart first
            return fetch('/cart/clear.js', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' }
            }).then(() => {
              // Add to cart with properties
              return fetch('/cart/add.js', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                  items: [{
                    id: variantId,
                    quantity: 1,
                    properties: {
                      'Naam': eventDetails.name,
                      'E-mail': eventDetails.email,
                      'Telefoon': eventDetails.phone || '-',
                      'Evenement Datum': eventDetails.date || 'Nader te bepalen',
                      'Type Evenement': eventDetails.eventType || '-',
                      'Bericht': eventDetails.message || '-'
                    }
                  }]
                })
              });
            });
          } else {
            throw new Error('No variants found');
          }
        })
        .then(response => {
          if (!response.ok) throw new Error('Failed to add to cart');
          return response.json();
        })
        .then(data => {
          console.log('âœ… Added to cart with details:', data);
          window.location.href = '/checkout';
        })
        .catch(error => {
          console.error('âŒ Checkout error:', error);
          btn.classList.remove('loading');
          btn.textContent = originalText;

          // Show friendly error message
          alert(LanguageSystem && LanguageSystem.currentLang === 'en'
            ? 'Unable to proceed to checkout. The product may not be set up yet. Please use "Send Inquiry" instead, and we will send you a payment link.'
            : 'Kan niet doorgaan naar de kassa. Het product is mogelijk nog niet ingesteld. Gebruik "Alleen Aanvraag Versturen" en we sturen u een betaallink.');
        });
    },

    handleBookNow: function(e) {
      e.preventDefault();
      e.stopPropagation();

      const btn = e.target;
      const card = btn.closest('.package-card');
      const packageType = card.dataset.package;
      const variantId = card.dataset.variantId;

      console.log('ðŸ›’ Book Now clicked:', packageType, 'Variant:', variantId);

      // Add loading state
      btn.classList.add('loading');
      const originalText = btn.textContent;
      btn.textContent = LanguageSystem && LanguageSystem.currentLang === 'en' ? 'Processing' : 'Verwerken';

      // Check if we have a variant ID configured
      if (variantId && variantId.trim() !== '') {
        this.addToCartAndCheckout(variantId, btn, originalText);
      } else {
        // Fallback: Try to find product by handle
        this.findProductAndCheckout(packageType, btn, originalText);
      }
    },

    addToCartAndCheckout: function(variantId, btn, originalText) {
      // Clear cart first, then add item
      fetch('/cart/clear.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      })
      .then(() => {
        return fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            items: [{
              id: variantId,
              quantity: 1
            }]
          })
        });
      })
      .then(response => {
        if (!response.ok) throw new Error('Failed to add to cart');
        return response.json();
      })
      .then(data => {
        console.log('âœ… Added to cart:', data);
        window.location.href = '/checkout';
      })
      .catch(error => {
        console.error('âŒ Cart error:', error);
        this.handleCheckoutError(btn, originalText);
      });
    },

    findProductAndCheckout: function(packageType, btn, originalText) {
      const pkg = this.packages[packageType];
      if (!pkg) {
        this.handleCheckoutError(btn, originalText);
        return;
      }

      // Try to fetch product by handle
      fetch(`/products/${pkg.handle}.js`)
        .then(response => {
          if (!response.ok) throw new Error('Product not found');
          return response.json();
        })
        .then(product => {
          if (product.variants && product.variants.length > 0) {
            const variantId = product.variants[0].id;
            this.addToCartAndCheckout(variantId, btn, originalText);
          } else {
            throw new Error('No variants found');
          }
        })
        .catch(error => {
          console.warn('âš ï¸ Product not found, falling back to contact form:', error);
          this.fallbackToContactForm(packageType, btn, originalText);
        });
    },

    fallbackToContactForm: function(packageType, btn, originalText) {
      // Reset button
      btn.classList.remove('loading');
      btn.textContent = originalText;

      // Pre-select package in contact form
      const packageSelect = document.getElementById('contact-package');
      if (packageSelect) {
        packageSelect.value = packageType;
      }

      // Scroll to contact
      const contactSection = document.getElementById('contact');
      if (contactSection) {
        contactSection.scrollIntoView({ behavior: 'smooth' });

        // Show message
        const msg = document.createElement('div');
        msg.className = 'checkout-notice';
        msg.style.cssText = `
          background: linear-gradient(135deg, var(--gold), var(--dark-gold));
          color: var(--black);
          padding: 15px 25px;
          margin-bottom: 20px;
          text-align: center;
          font-weight: 600;
          border-radius: 4px;
          animation: fadeIn 0.5s ease;
        `;
        msg.innerHTML = LanguageSystem && LanguageSystem.currentLang === 'en'
          ? 'ðŸ“‹ Please complete the form below to book your package. We will send you a payment link.'
          : 'ðŸ“‹ Vul het onderstaande formulier in om je pakket te boeken. We sturen je een betaallink.';

        const existingNotice = document.querySelector('.checkout-notice');
        if (existingNotice) existingNotice.remove();

        const contactContainer = contactSection.querySelector('.contact-container, form');
        if (contactContainer) {
          contactContainer.insertBefore(msg, contactContainer.firstChild);
        }
      }
    },

    handleCheckoutError: function(btn, originalText) {
      btn.classList.remove('loading');
      btn.textContent = LanguageSystem && LanguageSystem.currentLang === 'en' ? 'Error - Try Again' : 'Fout - Probeer Opnieuw';

      setTimeout(() => {
        btn.textContent = originalText;
      }, 3000);
    }
  };

  // Initialize checkout system
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => ShopifyCheckout.init());
  } else {
    ShopifyCheckout.init();
  }
</script>

