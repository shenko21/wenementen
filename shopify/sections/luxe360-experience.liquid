{{ 'luxe360.css' | asset_url | stylesheet_tag }}

<section class="experience" id="experience">
  <div class="section-header">
    <div class="section-subtitle">{{ section.settings.subtitle }}</div>
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <p class="section-description">{{ section.settings.description }}</p>
  </div>

  <div class="experience-grid">
    {% for block in section.blocks %}
      <div class="experience-card" {{ block.shopify_attributes }}>
        <div class="experience-icon">{{ block.settings.icon }}</div>
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</section>

