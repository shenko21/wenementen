{% comment %}
  LUXE 360° Footer
  This is a Shopify 2.0 section for the footer
{% endcomment %}

{{ 'luxe360.css' | asset_url | stylesheet_tag }}

<footer class="luxe360-footer">
  <div class="footer-content">
    <div>
      <div class="footer-brand">{{ section.settings.brand_name }}</div>
      <p class="footer-tagline">{{ section.settings.tagline }}</p>
      <div class="social-icons">
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" title="Instagram">📷</a>
        {% endif %}
        {% if section.settings.tiktok_url != blank %}
          <a href="{{ section.settings.tiktok_url }}" target="_blank" title="TikTok">🎵</a>
        {% endif %}
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" target="_blank" title="Facebook">👤</a>
        {% endif %}
        {% if section.settings.linkedin_url != blank %}
          <a href="{{ section.settings.linkedin_url }}" target="_blank" title="LinkedIn">💼</a>
        {% endif %}
      </div>
    </div>

    {% for block in section.blocks %}
      {% if block.type == 'footer_column' %}
        <div class="footer-section" {{ block.shopify_attributes }}>
          <h4>{{ block.settings.heading }}</h4>
          <ul class="footer-links">
            {% assign links = block.settings.links | newline_to_br | split: '<br />' %}
            {% for link in links %}
              {% if link != blank %}
                <li>{{ link }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="footer-bottom">
    <p>{{ section.settings.copyright_text }}</p>
  </div>
</footer>

<!-- WhatsApp Float -->
{% if section.settings.whatsapp_number != blank %}
  <a href="https://wa.me/{{ section.settings.whatsapp_number }}" class="whatsapp-float" target="_blank" title="WhatsApp Us">
    💬
  </a>
{% endif %}

{{ 'luxe360.js' | asset_url | script_tag }}

